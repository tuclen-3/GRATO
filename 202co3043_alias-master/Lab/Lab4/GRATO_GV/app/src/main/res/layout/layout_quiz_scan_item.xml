<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@drawable/long_bg_ripple_effect"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="9.5"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/tvQuizScanName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Midterm exam"
                android:textColor="@android:color/black"
                android:textSize="22sp"></TextView>

            <TextView
                android:id="@+id/tvNumQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvQuizScanName"
                android:text="20 questions"
                android:textColor="@android:color/black"
                android:textSize="18sp"></TextView>
        </LinearLayout>
        <ImageView
            android:background="@drawable/long_bg_ripple_effect"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:scaleType="fitXY"
            android:src="@drawable/long_ic_delete">
        </ImageView>

    </LinearLayout>

    <View
        android:layout_gravity="center_horizontal"
        android:id="@+id/spacerGroceries"
        android:layout_width="370dp"
        android:layout_height="1dp"
        android:background="#CACACA" />
</LinearLayout>
