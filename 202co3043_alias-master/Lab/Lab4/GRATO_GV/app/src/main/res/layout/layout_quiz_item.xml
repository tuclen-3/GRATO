<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    android:layout_margin="8dp"
    android:layout_gravity="center"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/cardview_default_elevation"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:background="@drawable/long_bg_ripple_effect"
        android:padding="5dp"
        android:weightSum="1.3"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical">

        <!--    <androidx.cardview.widget.CardView-->
        <!--        app:cardElevation="@dimen/cardview_default_elevation"-->
        <!--        android:layout_width="wrap_content"-->
        <!--        android:layout_height="wrap_content">-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:layout_weight="0.8"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:background="@drawable/long_logo_grato"
                    android:id="@+id/imgLogo"
                    android:scaleType="fitXY"
                    android:layout_width="145dp"
                    android:layout_height="135dp">
                </ImageView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:layout_marginBottom="5dp"
                        android:id="@+id/tvQuizName"
                        android:layout_width="222dp"
                        android:layout_height="60dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="Quiz 6: Abstract syntax tree"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="24sp"></TextView>


                    <TextView
                        android:drawablePadding="10dp"
                        android:drawableLeft="@drawable/long_ic_question"
                        android:id="@+id/tvNumQuestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvQuizName"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="7dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="20 questions"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="16sp">
                    </TextView>

                    <TextView
                        android:id="@+id/tvTime"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@drawable/long_ic_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvNumQuestion"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="7dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="10 minutes"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="16sp">
                    </TextView>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginVertical="5dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.2"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/imgDeadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvNumQuestion"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/long_ic_deadline"></ImageView>

                <TextView
                    android:id="@+id/tvDeadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    android:text="Deadline: 14 April 2021 12:10 PM"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="16sp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:padding="5dp"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_weight="0.3"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:id="@+id/tvAddClass"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_below="@id/tvNumQuestion"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/long_ic_add"
                    android:gravity="center"
                    android:paddingLeft="15dip"
                    android:paddingRight="16dip"
                    android:text="Add class"
                    android:textColor="#000000"
                    android:textSize="14sp"></TextView>

                <TextView
                    android:id="@+id/tvEdit"
                    android:gravity="center"
                    android:paddingLeft="15dip"
                    android:paddingRight="16dip"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/long_ic_edit_quiz_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_below="@id/tvNumQuestion"
                    android:text="Edit"
                    android:textColor="#000000"
                    android:textSize="14sp">
                </TextView>

                <TextView
                    android:id="@+id/tvDelete"
                    android:gravity="center"
                    android:paddingLeft="15dip"
                    android:paddingRight="16dip"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/long_ic_delete"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_below="@id/tvNumQuestion"
                    android:text="Delete"
                    android:textColor="#000000"
                    android:textSize="14sp">
                </TextView>

            </LinearLayout>
        </LinearLayout>
        <!--    </androidx.cardview.widget.CardView>-->



    </LinearLayout>

</androidx.cardview.widget.CardView>

