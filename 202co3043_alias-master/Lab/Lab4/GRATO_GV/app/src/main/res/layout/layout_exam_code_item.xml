<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/keyOption"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        app:cardElevation="5dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@drawable/long_bg_ripple_effect"
            android:weightSum="10"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="75dp">
            <TextView
                android:id="@+id/tvExamCodeText"
                android:layout_marginLeft="10dp"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:text="Exam code: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <androidx.cardview.widget.CardView
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tvExamCodeText"
                app:cardCornerRadius="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:gravity="center"
                    android:background="@color/palletes4"
                    android:layout_width="100dp"
                    android:layout_height="34dp">
                    <TextView
                        android:id="@+id/tvExamCodeId"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:text="001"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:background="@drawable/long_bg_ripple_effect"
                android:layout_marginRight="5dp"
                android:id="@+id/imgDelete"
                android:layout_alignParentRight="true"
                android:src="@drawable/long_ic_delete"
                android:scaleType="fitXY"
                android:layout_width="25dp"
                android:layout_height="25dp">
            </ImageView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>