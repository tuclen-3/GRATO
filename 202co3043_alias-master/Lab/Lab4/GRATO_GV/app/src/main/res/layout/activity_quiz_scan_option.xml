<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.QuizScanOptionActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_marginBottom="10dp"
        app:navigationIcon="@drawable/long_ic_arrow_back_white_18dp"
        android:id="@+id/quizScanOptionToolbar"
        android:background="@color/palletes3"
        app:titleTextColor="@color/white"
        app:title="Quiz scan option"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:id="@+id/keyOption"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        app:cardElevation="5dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/long_bg_ripple_effect"
            android:weightSum="10"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="75dp">
            <ImageView
                android:layout_marginLeft="5dp"
                android:src="@drawable/long_ic_key"
                android:scaleType="fitXY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ImageView>
            <TextView
                android:layout_weight="9"
                android:layout_marginLeft="15dp"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:text="Key"
                android:layout_width="200dp"
                android:layout_height="wrap_content">
            </TextView>
            <ImageView
                android:scaleX="-1"
                android:src="@drawable/long_ic_arrow_back_white_18dp"
                android:scaleType="fitXY"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:tint="@color/palletes4">
            </ImageView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/scanpapersOption"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        app:cardElevation="5dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/long_bg_ripple_effect"
            android:weightSum="10"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="75dp">
            <ImageView
                android:layout_marginLeft="5dp"
                android:src="@drawable/long_ic_scan_papers"
                android:scaleType="fitXY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ImageView>
            <TextView
                android:layout_weight="9"
                android:layout_marginLeft="15dp"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:text="Scan papers"
                android:layout_width="200dp"
                android:layout_height="wrap_content">
            </TextView>
            <ImageView
                android:scaleX="-1"
                android:src="@drawable/long_ic_arrow_back_white_18dp"
                android:scaleType="fitXY"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:tint="@color/palletes4">
            </ImageView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/reviewpapersOption"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        app:cardElevation="5dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/long_bg_ripple_effect"
            android:weightSum="10"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="75dp">
            <ImageView
                android:layout_marginLeft="5dp"
                android:src="@drawable/long_ic_review_papers"
                android:scaleType="fitXY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ImageView>
            <TextView
                android:layout_weight="9"
                android:layout_marginLeft="15dp"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:text="Review papers"
                android:layout_width="200dp"
                android:layout_height="wrap_content">
            </TextView>
            <ImageView
                android:scaleX="-1"
                android:src="@drawable/long_ic_arrow_back_white_18dp"
                android:scaleType="fitXY"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:tint="@color/palletes4">
            </ImageView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/analysisOption"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        app:cardElevation="5dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/long_bg_ripple_effect"
            android:weightSum="10"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="75dp">
            <ImageView
                android:layout_marginLeft="5dp"
                android:src="@drawable/long_ic_analysis"
                android:scaleType="fitXY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ImageView>
            <TextView
                android:layout_weight="9"
                android:layout_marginLeft="15dp"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:text="Analysis"
                android:layout_width="200dp"
                android:layout_height="wrap_content">
            </TextView>
            <ImageView
                android:scaleX="-1"
                android:src="@drawable/long_ic_arrow_back_white_18dp"
                android:scaleType="fitXY"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:tint="@color/palletes4">
            </ImageView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>




</LinearLayout>