<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvNum"
        android:layout_margin="7dp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/long_bg_num_answers_circle"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <TextView
        android:id="@+id/tvAnswerA"
        android:layout_margin="7dp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/long_bg_option_answers_circle"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:text="A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <TextView
        android:id="@+id/tvAnswerB"
        android:layout_margin="7dp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/long_bg_option_answers_circle"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:text="B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>


    <TextView
        android:id="@+id/tvAnswerC"
        android:layout_margin="7dp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/long_bg_option_answers_circle"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:text="C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <TextView
        android:id="@+id/tvAnswerD"
        android:layout_margin="7dp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/long_bg_option_answers_circle"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:text="D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <TextView
        android:id="@+id/tvAnswerE"
        android:layout_margin="7dp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/long_bg_option_answers_circle"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:text="E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

</LinearLayout>