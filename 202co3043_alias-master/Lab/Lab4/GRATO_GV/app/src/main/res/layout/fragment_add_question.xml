<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginHorizontal="5dp"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:text="Question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <View
                android:layout_gravity="center_horizontal"
                android:id="@+id/spacerGroceries"
                android:layout_width="390dp"
                android:layout_height="1dp"
                android:background="#CACACA" />

            <androidx.cardview.widget.CardView
                android:layout_marginHorizontal="5dp"
                app:cardCornerRadius="10dp"
                android:layout_marginVertical="15dp"
                app:cardElevation="@dimen/cardview_default_elevation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_margin="10dp"
                    android:background="@android:color/transparent"
                    android:gravity="top|left"
                    android:textColorHint="#B7B7B4"
                    android:textColor="@color/black"
                    android:hint="Enter question"
                    android:inputType="textMultiLine"
                    android:layout_width="match_parent"
                    android:layout_height="250dp">
                </EditText>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:text="Answers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <View
                android:layout_gravity="center_horizontal"
                android:layout_width="390dp"
                android:layout_height="1dp"
                android:background="#CACACA" />

            <androidx.cardview.widget.CardView
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="@dimen/cardview_default_elevation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:padding="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/long_ic_checked"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </ImageView>
                    <EditText
                        android:background="@android:color/transparent"
                        android:layout_marginLeft="15dp"
                        android:text="2"
                        android:textColorHint="#B7B7B4"
                        android:textColor="@color/black"
                        android:hint="Enter answers here"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                    </EditText>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="@dimen/cardview_default_elevation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:weightSum="10"
                    android:padding="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/long_ic_unchecked"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </ImageView>
                    <EditText
                        android:layout_weight="9.7"
                        android:background="@android:color/transparent"
                        android:layout_marginLeft="15dp"
                        android:text="Answer default text"
                        android:textColorHint="#B7B7B4"
                        android:textColor="@color/black"
                        android:hint="Enter answers here"
                        android:layout_width="0dp"
                        android:layout_height="50dp">
                    </EditText>
                    <ImageView
                        android:src="@drawable/long_ic_remove"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </ImageView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="@dimen/cardview_default_elevation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:weightSum="10"
                    android:padding="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/long_ic_unchecked"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </ImageView>
                    <EditText
                        android:layout_weight="9.7"
                        android:background="@android:color/transparent"
                        android:layout_marginLeft="15dp"
                        android:text="Answer default text"
                        android:textColorHint="#B7B7B4"
                        android:textColor="@color/black"
                        android:hint="Enter answers here"
                        android:layout_width="0dp"
                        android:layout_height="50dp">
                    </EditText>
                    <ImageView
                        android:src="@drawable/long_ic_remove"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </ImageView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="@dimen/cardview_default_elevation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:weightSum="10"
                    android:padding="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/long_ic_unchecked"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </ImageView>
                    <EditText
                        android:layout_weight="9.7"
                        android:background="@android:color/transparent"
                        android:layout_marginLeft="15dp"
                        android:text="Answer default text"
                        android:textColorHint="#B7B7B4"
                        android:textColor="@color/black"
                        android:hint="Enter answers here"
                        android:layout_width="0dp"
                        android:layout_height="50dp">
                    </EditText>
                    <ImageView
                        android:src="@drawable/long_ic_remove"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </ImageView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- Do đã match parent nên cardview ko
             tạo bóng đc => phải padding cho nút nhỏ lại
             để tạo bóng -->
            <androidx.cardview.widget.CardView
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:background="@color/palletes4"
                    android:weightSum="10"
                    android:padding="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_toLeftOf="@id/tvAddAnswers"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/long_ic_add_white_18dp"
                        android:layout_width="27dp"
                        android:layout_height="27dp">
                    </ImageView>
                    <TextView
                        android:gravity="center"
                        android:id="@+id/tvAddAnswers"
                        android:textSize="20sp"
                        android:text="Add Answers"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


</ScrollView>